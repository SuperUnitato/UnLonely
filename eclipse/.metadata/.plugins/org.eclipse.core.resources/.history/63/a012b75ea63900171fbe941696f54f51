package com.SuperUnitato.UnLonely;

import net.minecraft.item.Item;

public class Reference {
	
	public static final String MOD_ID = "sum";
	public static final String NAME = "UnLonely mod";
	public static final String VERSION = "1.0";
	public static final String ACCEPTED_VERSIONS = "[1.11.2]";
	
	public static final String CLIENT_PROXY_CLASS = "com.SuperUnitato.UnLonely.proxy.ClientProxy";
	public static final String SERVER_PROXY_CLASS = "com.SuperUnitato.UnLonely.proxy.ServerProxy";
	
	public static enum UnLonelyItems{
		
		ONEDOLLAR("OneDollar", "ItemOneDollar"),
		FIVEDOLLAR("FiveDollar", "ItemFiveDollar"),
		TENDOLLAR("TenDollar", "ItemTenDollar"),
		TWENTYDOLLAR("TwentyDollar", "ItemTwentyDollar"),
		FIFTYDOLLAR("FiftyDollar", "ItemFiftyDollar"),
		ONEHUNDREDDOLLAR("OnehundredDollar", "ItemOnehundredDollar");
		
		private String unlocalizedName;
		private String registryName;
		
		UnLonelyItems(String unlocalizedName, String registryName)
		{
			this.unlocalizedName = unlocalizedName;
			this.registryName = registryName;
		}
		
		public String getUnlocalizedName(){
			return unlocalizedName;
		}
		
		public String getRegistryName(){
			return registryName;
		}
		
	}
	
	public static enum UnLonelyBlocks{
		
		ATM("atm", "BlockAtm");
		
		private String unlocalizedName;
		private String registryName;
		
		UnLonelyBlocks(String unlocalizedName, String registryName)
		{
			this.unlocalizedName = unlocalizedName;
			this.registryName = registryName;
		}
		
		public String getUnlocalizedName(){
			return unlocalizedName;
		}
		
		public String getRegistryName(){
			return registryName;
		}
		
	}
	
	public static enum UnLonleyEntities{
		
		PASSIVE("passive", "EntitiesPassivePerson"),
		NEUTRAL("neutral", "EntitiesNeutralPerson"),
		HOSTILE("hostile", "EntitiesHostilePerson");
		
		private String unlocalizedName;
		private String registryName;
		
		UnLonleyEntities(String unlocalizedName, String registryName){
			this.unlocalizedName = unlocalizedName;
			this.registryName = registryName;
		}
		
		public String getUnlocalizedName(){
			return unlocalizedName;
		}
		
		public String getRegistryName(){
			return registryName;
		}
		
	}

}
